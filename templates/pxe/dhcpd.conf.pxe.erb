# BEGIN PXE Section
# https://ipxe.org/cfg/platform
option client-arch code 93 = unsigned integer 16; # RFC4578
class "pxeclients" {
    match if substring (option vendor-class-identifier, 0, 9) = "PXEClient";

    if option client-arch = 00:06 {
        option bootfile-name "boot/grub/x86_32-efi/core.efi";
        filename "boot/grub/x86_32-efi/core.efi";
    } else if option client-arch = 00:07 {
        option bootfile-name "boot/grub/x86_64-efi/core.efi";
        filename "boot/grub/x86_64-efi/core.efi";
    } else {
        option bootfile-name "boot/grub/i386-pc/core.0";
        filename "boot/grub/i386-pc/core.0";
    }
}
# END PXE Section