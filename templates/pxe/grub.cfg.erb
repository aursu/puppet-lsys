set timeout=0

# default action: reboot
set default=0

set kernel='<%= @default_kernel %>'
set initimg='<%= @default_initimg %>'

# check if hostname.cfg file exists in install directory and read it
if [ -s (pxe)/boot/install/${net_pxe_hostname}.cfg ]; then
    set default=1
    # read additional configuration parameters
    source (pxe)/boot/install/${net_pxe_hostname}.cfg
fi

# local boot entry
menuentry 'Local system boot' --class centos --class gnu-linux --class gnu --class os {
    # exit from grub2 and continue booting from HDD
    exit
}

# installation/resync entry
menuentry 'Local system resync' --class os {
    set root='(pxe)'
    linux $kernel $options HOSTNAME=${net_pxe_hostname}
    initrd $initimg
}

